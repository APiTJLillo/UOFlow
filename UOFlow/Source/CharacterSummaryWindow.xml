<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="Source/CharacterSummaryWindow.lua" />
	</Scripts>
	<Windows>
		<Window name="CharacterSummaryWindow" movable="true" resizable="true" closeable="true">
			<Size>
				<AbsPoint x="480" y="540" />
			</Size>
			<Anchors>
				<Anchor point="center" relativePoint="center">
					<AbsPoint x="0" y="0" />
				</Anchor>
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="CharacterSummaryWindow.Initialize" />
				<EventHandler event="OnShutdown" function="CharacterSummaryWindow.Shutdown" />
				<EventHandler event="OnShown" function="CharacterSummaryWindow.OnShown" />
			</EventHandlers>
			<Windows>
				<Window name="$parentChrome" inherits="UO_DefaultWindow">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" />
						<Anchor point="bottomright" relativePoint="bottomright" />
					</Anchors>
				</Window>

				<Button name="$parentRefreshButton" inherits="UO_DefaultButton">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="32" y="50" />
						</Anchor>
					</Anchors>
					<Text>Refresh</Text>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="CharacterSummaryWindow.RefreshButton" />
					</EventHandlers>
				</Button>

				<Button name="$parentCopyButton" inherits="UO_DefaultButton">
					<Anchors>
						<Anchor point="left" relativePoint="right" relativeTo="$parentRefreshButton">
							<AbsPoint x="20" y="0" />
						</Anchor>
					</Anchors>
					<Text>Copy</Text>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="CharacterSummaryWindow.CopyButton" />
					</EventHandlers>
				</Button>

				<Label name="$parentStatus" font="UO_DefaultText" maxchars="256" textalign="left">
					<Size>
						<AbsPoint x="400" y="20" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentCopyButton">
							<AbsPoint x="0" y="8" />
						</Anchor>
					</Anchors>
				</Label>

				<ScrollWindow name="$parentScroll" childscrollwindow="$parentScrollChild" scrollbar="$parentScrollbar" lineheight="24" autoHideScrollBar="true">
					<Size>
						<AbsPoint x="430" y="390" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="25" y="120" />
						</Anchor>
					</Anchors>
					<Windows>
						<VerticalScrollbar name="$parentScrollbar" inherits="StandardVertScroll" />
						<Window name="$parentScrollChild">
							<Size>
								<AbsPoint x="410" y="0" />
							</Size>
							<Windows>
								<Label name="$parentText" font="UO_DefaultText" maxchars="8192" textalign="left" wordwrap="true">
									<Size>
										<AbsPoint x="410" y="40" />
									</Size>
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft">
											<AbsPoint x="4" y="4" />
										</Anchor>
									</Anchors>
									<TextColor r="255" g="255" b="255" />
								</Label>
								<EditBox name="$parentCopyBox" font="UO_DefaultText" maxchars="8192" multiline="true">
									<Size>
										<AbsPoint x="1" y="1" />
									</Size>
									<Anchors>
										<Anchor point="topleft" relativePoint="topleft">
											<AbsPoint x="4" y="4" />
										</Anchor>
									</Anchors>
									<TextColor r="255" g="255" b="255" />
								</EditBox>
							</Windows>
						</Window>
					</Windows>
				</ScrollWindow>
			</Windows>
		</Window>
	</Windows>
</Interface>
