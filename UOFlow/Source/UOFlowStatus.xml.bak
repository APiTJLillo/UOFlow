<?xml version="1.0" encoding="UTF-8"?>
<Interface>
  <Scripts>
    <Script file="Source/UOFlowStatus.lua"/>
  </Scripts>

  <Windows>

    <!-- Root HUD window -->
    <Window name="UOFlowStatusWindowTemplate" movable="true" layer="secondary">
      <Size>
        <AbsPoint x="220" y="120"/>
      </Size>
      <Anchors>
        <Anchor point="topleft" relativeTo="Root" relativePoint="topleft">
          <AbsPoint x="40" y="100"/>
        </Anchor>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="UOFlowStatus.Initialize"/>
        <EventHandler event="OnShown" function="UOFlowStatus.Show"/>
        <EventHandler event="OnShutdown" function="UOFlowStatus.Hide"/>
      </EventHandlers>

      <Windows>
        <FullResizeImage name="$parentChrome" inherits="UO_Default_Inner_Window_Frame">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft"/>
            <Anchor point="bottomright" relativePoint="bottomright"/>
          </Anchors>
        </FullResizeImage>

        <Label name="$parentTitle" font="UO_DefaultText" text="UOFlow Status">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft">
              <AbsPoint x="8" y="6"/>
            </Anchor>
          </Anchors>
        </Label>

        <Window name="$parentList">
          <Size>
            <AbsPoint x="208" y="90"/>
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft">
              <AbsPoint x="6" y="24"/>
            </Anchor>
          </Anchors>
        </Window>
      </Windows>
    </Window>

    <!-- One status row: dot + label + value -->
    <Window name="UOFlowStatusRowTemplate" layer="secondary">
      <Size>
        <AbsPoint x="208" y="16"/>
      </Size>

      <Windows>
        <Label name="$parentDot" font="UO_DefaultText" text="">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft"/>
          </Anchors>
        </Label>

        <Label name="$parentLabel" font="UO_DefaultText" text="">
          <Anchors>
            <Anchor point="topleft" relativeTo="$parentDot" relativePoint="topright">
              <AbsPoint x="6" y="-2"/>
            </Anchor>
          </Anchors>
        </Label>

        <Label name="$parentVal" font="UO_DefaultText" text="">
          <Anchors>
            <Anchor point="topleft" relativeTo="$parentLabel" relativePoint="topright">
              <AbsPoint x="80" y="0"/>
            </Anchor>
          </Anchors>
        </Label>
      </Windows>
    </Window>

  </Windows>
</Interface>

