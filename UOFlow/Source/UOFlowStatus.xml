<?xml version="1.0" encoding="UTF-8"?>
<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Scripts>
    <Script file="Source/UOFlowStatus.lua"/>
  </Scripts>

  <Windows>

    <!-- Root HUD window -->
    <Window name="UOFlowStatusWindowTemplate" movable="true" layer="secondary">
      <Size>
        <AbsPoint x="320" y="120"/>
      </Size>
      <Anchors>
        <Anchor point="topleft" relativePoint="topleft">
          <AbsPoint x="40" y="100"/>
        </Anchor>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="UOFlowStatus.Initialize"/>
        <EventHandler event="OnShown" function="UOFlowStatus.Show"/>
        <EventHandler event="OnShutdown" function="UOFlowStatus.Hide"/>
      </EventHandlers>

      <Windows>
        <FullResizeImage name="$parentChrome" inherits="UO_Default_Inner_Window_Frame" layer="background" handleinput="false">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft"/>
            <Anchor point="bottomright" relativePoint="bottomright"/>
          </Anchors>
        </FullResizeImage>

        <Window name="$parentList" clipchildren="true">
          <Size>
            <AbsPoint x="300" y="90"/>
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft">
              <AbsPoint x="105" y="5"/>
            </Anchor>
          </Anchors>
        </Window>
      </Windows>
    </Window>

    <!-- One status row: dot + label + value -->
    <Window name="UOFlowStatusRowTemplate" layer="secondary">
      <Size>
        <AbsPoint x="300" y="16"/>
      </Size>

      <Windows>

        <Label name="$parentLabel" font="UO_DefaultText" text="">
          <Size>
            <AbsPoint x="110" y="16"/>
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topright">
              <AbsPoint x="6" y="0"/>
            </Anchor>
          </Anchors>
        </Label>

        <Label name="$parentVal" font="UO_DefaultText" text="">
          <Size>
            <AbsPoint x="90" y="16"/>
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topright">
              <AbsPoint x="100" y="0"/>
            </Anchor>
          </Anchors>
        </Label>
      </Windows>
    </Window>

  </Windows>
</Interface>
